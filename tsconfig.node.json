{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*",
    "src/**/*.ts",
    "./env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "./app.config.ts",
    "./auto-imports.d.ts",
    "./components.d.ts"
  ],
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node", "vite/client"],
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"],
      "@images/*": ["./src/assets/images/*"],
      "@assets/*": ["./src/assets/*"],
      "@appConfig": ["./app.config.ts"],
      "@i18n": ["./src/libs/i18n/index.ts"]
    }
  }
}
